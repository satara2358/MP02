---
// import "../styles/global.css";
import Smoke from "@/components/Smoke.astro*";
import "../cv.json";
import { basics } from "../cv.json";

interface Props {
	title: string;
}

const { title } = Astro.props;
const { image, summary } = basics;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Smoke />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;
	}

	@font-face {
		font-family: "Modern";
		font-style: normal;
		font-weight: 100 1000;
		font-display: swap;
		src: url("/font/Modern.woff2") format("woff2");
	}

	@font-face {
		font-family: "Urban";
		font-style: normal;
		font-weight: 100 1000;
		font-display: swap;
		src: url("/font/Urban.woff") format("woff");
	}

	html {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family:
			Modern,
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}
</style>
